{
  "name": "jiho-frontend",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "pnpm clean:web && pnpm clean:admin",
    "clean:web": "pnpm -C apps/web clean",
    "clean:admin": "pnpm -C apps/admin clean",
    "clean:dev": "pnpm -C apps/web clean:dev",
    "dev": "pnpm dev:web",
    "dev:web": "pnpm -C apps/web dev",
    "dev:server": "pnpm -C apps/web dev:server",
    "dev:admin": "pnpm -C apps/admin dev",
    "build": "pnpm build:web && pnpm build:admin",
    "build:web": "pnpm -C apps/web build",
    "build:admin": "pnpm -C apps/admin build",
    "build:client": "pnpm -C apps/web build:client",
    "build:server": "pnpm -C apps/web build:server",
    "build:server-ts": "pnpm -C apps/web build:server-ts",
    "build:prerender": "pnpm -C apps/web build:prerender",
    "build:docker": "pnpm -C apps/web build:docker",
    "preview": "pnpm -C apps/web preview",
    "preview:admin": "pnpm -C apps/admin preview",
    "start": "pnpm -C apps/web start",
    "start:prod": "pnpm -C apps/web start:prod",
    "start:docker": "pnpm -C apps/web start:docker",
    "orval": "pnpm -C packages/api generate",
    "orval:watch": "pnpm -C packages/api generate:watch",
    "type-check": "pnpm type-check:web && pnpm type-check:admin",
    "type-check:web": "pnpm -C apps/web type-check",
    "type-check:server": "pnpm -C apps/web type-check:server",
    "type-check:admin": "pnpm -C apps/admin type-check"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^25.2.1"
  },
  "packageManager": "pnpm@9.15.2"
}
